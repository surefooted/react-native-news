{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "parser": "babel-eslint",
  "rules": {
    "no-console": [1],
    "max-len": [1, 120, 2, { "ignoreComments": true }],
    "semi": [2, "never"],
    "global-require": 0,
    "react/prop-types": [1],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/require-default-props": [0],
    "arrow-parens": [2, "always"]
  },
  "globals": {
    "__CLIENT__": true,
    "__SERVER__": true,
    "__PRODUCTION__": true,
    "__DEV__": true,
    "global": true,
    "escape": false,
    "navigator": false,
    "unescape": false,
    "window": false,
    "describe": true,
    "before": true,
    "after": true,
    "it": true,
    "localStorage": true
  }
}